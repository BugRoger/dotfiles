[alias]
  next = !git add . && git rebase --continue           # add merged file. continue
  rma  = !git ls-files -z --deleted | xargs -0 git rm  # stage all deletetion
  ca   = commit --amend --reuse-message=HEAD           # amend and reuse message

  l    = !source ~/.githelpers && pretty_git_log       # pretty log
  lg   = !source ~/.githelpers && pretty_github_log    # pretty log
  la   = !git l --all                                  #   with references
  r    = !git l -22                                    #   recent only 
  ra   = !git r --all                                  #   recent with references

[core]
	editor = vim -f
	excludesfile = ~/.gitignore

[color]
	ui = auto

[push]
	default = simple

# Hostname-based default config (fallback for when HOST var isn't set)
[include]
  path = ~/.dotfiles/.gitlocalconfig

# Hostname-based default config (if HOST env var is available)
[include]
  path = ~/.dotfiles/.gitlocalconfig.host-${HOST}

# URL-based config for different GitHub instances (overrides hostname config)
[includeIf "hasconfig:remote.*.url:**github.com/**"]
  path = .gitlocalconfig.github-public

[includeIf "hasconfig:remote.*.url:**github.wdf.sap.corp/**"]
  path = .gitlocalconfig.github-sap

[web]
	browser = open

[branch]
	autosetupmerge = true
[credential]
	helper = osxkeychain
